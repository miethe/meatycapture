{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "jsx": "preserve",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Emit */
    "noEmit": false,
    "outDir": "./dist/cli",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Skip Lib Check */
    "skipLibCheck": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@core/logging": ["./src/cli/logging-stub.ts"],
      "@core/*": ["./src/core/*"],
      "@adapters/*": ["./src/adapters/*"],
      "@ui/*": ["./src/ui/*"],
      "@platform/*": ["./src/platform/*"]
    }
  },
  "include": [
    "src/cli/**/*.ts",
    "src/core/**/*.ts",
    "src/adapters/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/ui/**/*",
    "src/core/logging/**/*"
  ]
}
